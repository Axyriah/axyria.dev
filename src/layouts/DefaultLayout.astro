---
import Cursor from "@components/UX/Cursor.astro";
import NavigationBar from "@components/NavigationBar/_index.astro";
import ThemedLayout from "./ThemedLayout.astro";
import "@components/Theme/_index.astro";
import "@styles/fonts.css";
import "@styles/transitions.css";
import UXEffects from "@components/UX/UXEffects.svelte";
import SearchBar from "@components/Search/SearchBar.astro";
import TopLeftBlob from "@components/UX/TopLeftBlob.astro";

export interface Props {
  description: string;
  current: string;
}

const { description, current }: Props = Astro.props;
---

<ThemedLayout description={description}>
  <TopLeftBlob />
  <NavigationBar selected={current} />
  <main>
    <SearchBar />
    <div class="app-wrapper">
      <slot />
    </div>
  </main>
  <Cursor overlayIndex={5} size="20px" count={50} />
  <UXEffects
    client:load="svelte"
    query="li.navigation-entry, .ui-sound-listener, .ux-click-effect, a.id-link"
  />
</ThemedLayout>

<style is:global>
  :root {
    --margin: 32px;
    --nav-header-size: 1.75rem;
  }

  body {
    padding: 0;
    margin: var(--margin);
    display: flex;
    flex-direction: row;
    gap: 20px;
  }

  main,
  .app-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--margin);
  }

  .hover-shadow:hover {
    transform: scale(1.05);
    box-shadow: 0 0 11px var(--box-shadow-color);
    border-radius: 10px;
  }

  @media only screen and (max-width: 700px) {
    .navigation-top {
      align-items: center;
      justify-content: center;
    }
    body {
      gap: 16px;
      flex-direction: column;
    }
  }
</style>
