---
import Cursor from "../components/Cursor.astro";
import NavigationBar from "../components/NavigationBar/_index.astro";
import ThemedLayout from "./ThemedLayout.astro";
import "../global/Theme.astro";
import "../styles/fonts.css";

export interface Props {
  description: string;
  current: string;
}

const { description, current }: Props = Astro.props;
---

<ThemedLayout description={description}>
  <NavigationBar selected={current} />
  <main>
    <slot />
  </main>
  <Cursor overlayIndex={2} size="20px" count={50} />
</ThemedLayout>
