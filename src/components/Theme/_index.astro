<style is:global>
  :root {
    --background-color: #010005;
    --accent-color: #59c2ff;
    --text-color: #f9f9f9;
    --separator-color: #111226;
    --search-background-color: rgba(255, 255, 255, 0.03);
    --separator-secondary-color: #abc7ff;
    --text-secondary-color: #8c8ca8;
    --box-shadow-color: rgba(127, 127, 127, 0.2);
    --theme-outline-color: #62a4f5;
    --background-gradient-color: linear-gradient(
      150deg,
      rgb(22, 1, 108) 0%,
      rgb(106, 144, 238) 35%,
      rgb(1, 0, 5) 100%
    );
    --modal-background-color: rgba(255, 255, 255, 0.03);
    --tag-lighter-color: rgba(255, 255, 255, 0.015);
  }
  [data-theme="light"] {
    --background-color: #f9f9f9;
    --accent-color: #2f394d;
    --text-color: #101010;
    --separator-color: #e0e0e0;
    --search-background-color: #efefef;
    --separator-secondary-color: #161616;
    --text-secondary-color: #3c3c3c;
    --box-shadow-color: rgba(0, 0, 0, 0.2);
    --theme-outline-color: #195fb5;
    --background-gradient-color: linear-gradient(
      150deg,
      rgb(0, 44, 132) 0%,
      rgb(0, 86, 255) 35%,
      rgb(249, 249, 249) 100%
    );
    --modal-background-color: rgba(0, 0, 0, 0.05);
    --tag-lighter-color: rgba(0, 0, 0, 0.05);
  }
  body {
    background-color: var(--background-color);
    color: var(--text-color);
    accent-color: var(--accent-color);
  }
  ::selection {
    background-color: var(--accent-color);
    color: var(--background-color);
  }
  .text-secondary {
    color: var(--text-secondary-color);
  }
  .text-accent {
    color: var(--accent-color);
  }
  body:not(.preload) {
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  .theme-selector {
    transition: transform 0.2s ease-in-out;
  }
  .theme-selector:hover {
    transform: scale(1.25);
  }
</style>

<script>
  const local = localStorage.getItem("theme");
  const theme =
    local ||
    (window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light");
  if (!local) {
    localStorage.setItem("theme", theme);
  }
  document.documentElement.setAttribute("data-theme", theme);
</script>
