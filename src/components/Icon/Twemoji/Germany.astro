---
import { type Props } from "@components/Icon/Props";

let {
    size,
    title,
    class: _class,
    width = size,
    height = size,
    ...props
}: Props = {
    title: "Germany",
    viewBox: "0 0 36 36",
    ...Astro.props,
};

const toAttributeSize = (size: number | string | undefined) =>
    (Number.isInteger(size) ? String(size) : size?.toString() ?? "15").replace(
        /(?<=[0-9])x$/,
        "em",
    );

size = toAttributeSize(size);
width = toAttributeSize(width);
height = toAttributeSize(height);
---

<svg xmlns="http://www.w3.org/2000/svg" {width} {height} {...props}>
    {title ? <title>{title}</title> : ""}
    <path fill="#FFCD05" d="M0 27c0 2.209 1.791 4 4 4h28c2.209 0 4-1.791 4-4v-4H0v4z"/><path fill="#ED1F24" d="M0 14h36v9H0z"/><path fill="#141414" d="M32 5H4C1.791 5 0 6.791 0 9v5h36V9c0-2.209-1.791-4-4-4z"/>
</svg>