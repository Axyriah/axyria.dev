---

<style>
  nav {
    animation: slide-from-left 0.75s ease-in-out;
  }
  nav {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    float: left;
  }
  nav {
    gap: 16px;
  }
  @media only screen and (max-width: 700px) {
    nav {
      align-items: center;
      gap: 5px;
      margin-bottom: 16px;
    }
    main {
      margin-left: 0;
      margin-top: 0;
    }
  }
</style>

<nav aria-hidden="true">
  <ItemsWrapper>
    <Settings client:only="svelte" />
    {
      items.map(item => (
        <Item data={{ ...item, selected: selected === item.id }} />
      ))
    }
  </ItemsWrapper>
</nav>
