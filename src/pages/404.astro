---
import DefaultLayout from "@layouts/DefaultLayout.astro";
import { Image } from "@astrojs/image/components";
import "@styles/center.css";
---

<style>
  #error-wrapper svg {
    width: 5rem;
    height: 5rem;
  }
  #error-wrapper h1 {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 2.4rem;
  }
  #error-wrapper p {
    font-size: 1rem;
    text-align: center;
    max-width: 60%;
  }
  .app-wrapper,
  #error-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 5px;
  }
</style>

<DefaultLayout description="Oops! This page doesn't seem to exist!" current="">
  <section id="error-wrapper">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M4 8v-2a2 2 0 0 1 2 -2h2"></path>
      <path d="M4 16v2a2 2 0 0 0 2 2h2"></path>
      <path d="M16 4h2a2 2 0 0 1 2 2v2"></path>
      <path d="M16 20h2a2 2 0 0 0 2 -2v-2"></path>
      <path d="M9 10h.01"></path>
      <path d="M15 10h.01"></path>
      <path d="M9.5 15.05a3.5 3.5 0 0 1 5 0"></path>
    </svg>
    <h1>404</h1>
    <p>
      Oops! This page doesn't seem to exist. You can return to the <a href="/"
        >homepage</a
      > or <a href="/contact">contact me</a> if you think this is a mistake.
    </p>
  </section>
</DefaultLayout>
